@{
    ViewData["Title"] = "Dojo Tactics";
}


<header class="py-5 landing-header">
    <div class="text-center my-5">
        <video playsinline autoplay muted onshow="this.play();">
            <source class="img-fluid mb-4 logo-animate" src="~/img/dt_logo_video.mp4" type="video/mp4">
        </video>
        <div class="mx-auto dt-text">
            <a type="button" class="btn btn-lg btn-outline-light sign-up" href="/Registration">Join the Battle!</a>
        </div>
    </div>
</header>

<!-- Content section-->
<section class="py-5">
    <div class="container my-5 dt-text">
        <div class="row justify-content-center">
            <div class="col-lg-6 text-center">
                <h2>Welcome to Dojo Tactics!</h2>
                <p class="lead">An upcoming Strategy RPG by a pair of Amateur Devs!</p>
            </div>
        </div>
    </div>
</section>
<!-- Image element - set the background image for the header in the line below-->
<div class="d-flex justify-content-center border-top border-bottom border-light bg-dark bg-gradient py-5">
    <div id="carouselExampleIndicators" class="carousel slide w-50" data-bs-ride="carousel">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active"
                aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1"
                aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2"
                aria-label="Slide 3"></button>
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="3"
                aria-label="Slide 4"></button>
        </div>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/img/screenshots/pic1.png" class="d-block w-100" alt="Slide 1">
            </div>
            <div class="carousel-item">
                <img src="~/img/screenshots/pic2.png" class="d-block w-100" alt="Slide 2">
            </div>
            <div class="carousel-item">
                <img src="~/img/screenshots/pic3.png" class="d-block w-100" alt="Slide 3">
            </div>
            <div class="carousel-item">
                <img src="~/img/screenshots/pic4.png" class="d-block w-100" alt="Slide 4">
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators"
            data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators"
            data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</div>

<!-- Content section-->
<section class="py-5 dt-text text-center">
    <div class="container my-5">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <h1>COMING SOON&trade; </h1>
            </div>
        </div>
    </div>
</section>

