@model Social

<section class="vh-100" style="background-color: #000;">
    <div class="container py-5">
        <div class="row d-flex justify-content-between align-items-center h-100">
            <div class="col-4">

                <div class="card dt-text" style="border-radius: 15px;">
                    <div class="card-body text-center">
                        <div class="mt-3 mb-4">
                            <img src="~/img/pfp1.png"
                                class="rounded-circle img-fluid border border-4 border-primary" style="width: 100px;" />
                        </div>
                        <h4 class="mb-2">@ViewBag.ActiveUser.Username</h4>
                        <p class="text-muted mb-4">Rank: Cardboard IV <span class="mx-2">|</span> 
                        <a href="https://github.com/WinterPDev"><i class="fab fa-github" style="font-size:25px"></i></a></p>
                        @* <span onclick="openNav()"><button type="button" class="btn btn-primary btn-rounded btn-lg">
                            Friends List
                        </button></span> *@
                        <div class="d-flex justify-content-between text-center mt-5 mb-2">
                            <div>
                                <p class="mb-2 h5">0</p>
                                <p class="text-muted mb-0">Games Won</p>
                            </div>
                            <div class="px-3">
                                <p class="mb-2 h5">213</p>
                                <p class="text-muted mb-0">Games Lost</p>
                            </div>
                            <div>
                                <p class="mb-2 h5">1337</p>
                                <p class="text-muted mb-0">Ranking</p>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
                        
            <div class="col-4">
                @{
                    foreach(Social s in ViewBag.UserFriends)
                    {
                        <div class="card dt-text" style="border-radius: 15px;">
                            <div class="card-body text-left">
                                <div class="mt-3 mb-4">
                                    <img src="~/img/pfp1.png"
                                        class="rounded-circle img-fluid border border-4 border-primary" style="width: 50px;" />
                                </div>
                                <h4 class="mb-2">@s.FriendUser.Username</h4>
                                <p class="text-muted mb-4">Rank: Cardboard V</p>
                                <div class="d-flex justify-content-between text-center mt-5 mb-2">

                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>

    </div>
</section>